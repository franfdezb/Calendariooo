<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU APP"
        android:paddingBottom="20sp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:onClick="calendar"
        android:text="Calendario" />

    <Button
        android:id="@+id/btnWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiempo"
        android:onClick="weather"
        />

    <Button
        android:id="@+id/btnChronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CronÃ³metro"
        android:onClick="Chronometer"
        />

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:onClick="MapsActivity"
        />

    <Button
        android:id="@+id/btnLinterna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linterna"
        android:onClick="Lantern"
        />




</LinearLayout>